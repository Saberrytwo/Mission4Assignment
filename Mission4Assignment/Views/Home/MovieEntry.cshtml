@{
    ViewData["Title"] = "Movie Entry Form";
}
@model Mission4Assignment.Models.MovieEntry

<h1>Movie Entry Form</h1>

<div>
    <form method="post"> <!--Form for submitting new movies, including dropdown menus/ yes&no for ratings and edited categories-->
    <!--I also did the validation in the html inputs as well as the model-->
        <label asp-for="CategoryId">Category: </label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }    
            
        </select><br />


        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required/><br />

        <label asp-for="Year">Year: </label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director" required/><br />

        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Has This Movie Been Edited? </label>
        <select asp-for="Edited">
            <option value="">Pick if it's been edited</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">This Movie Was Lent To: </label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" maxlength="25"/><br />



        <input type="submit" value="Submit Movie Entry!" />
        <a asp-for="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
        <div asp-validation-summary="All"></div>

    </form>
</div>