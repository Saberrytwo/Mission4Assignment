@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
} <!--Title will change for each page-->
@model List<MovieEntry>


<div class="text-center">
    <h1 class="display-4">Welcome to the @ViewData["Title"]</h1>
    
    <img src="~/img/JoelHiltonHeadshot.jpg" />
    <p> <!--You know this is true-->
        My Name is Joel Hilton, and I am the slightly less cool younger brother of Professor Spencer Hilton.
    </p>
</div>

<h2>The Collection in All of its Glory</h2>
<table class="table table-bordered table-striped"> <!--This class uses bootstrap to give the table a more professional look-->
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited?</td>
            <td>LentTo</td>
            <td>Notes</td>
        </tr>

    </thead>
    <tbody>
        @foreach (var x in Model) //Goes through each MovieEntry in the model, and displays the information for it
        {
            <tr>
                <td>@x.Category.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-MovieId="@x.MovieId">Edit</a></td> <!--Passes in the MovieId so we can then grab that entry from the database-->
                <td><a asp-controller="Home" asp-action="Delete" asp-route-MovieId="@x.MovieId">Delete</a></td>
            </tr>
        }

    </tbody>
</table>
